<div class="card">
    <div class="card-header">
        <div class="card-header-title">
            <h3>
                Comments
            </h3>
        </div>
    </div>
    <div class="card-content">
        {{#if loggedIn}}
            {{> comment-input postId=postId}}
        {{/if}}

        {{#each comments as |content|}}
            {{> comment content=content}}
        {{/each}}
    </div>
</div>